<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16sp"
        android:id="@+id/imgContato"
        tools:src="@drawable/user3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgContato"
        android:layout_alignTop="@+id/imgContato"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/txtNome"
        tools:text="Batuta"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgContato"
        android:layout_alignBottom="@id/imgContato"
        android:id="@+id/txtSobre"
        tools:text="Aceita que doi menos"/>
</RelativeLayout>